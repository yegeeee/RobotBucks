<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:background="@color/colorAccent"
    android:layout_height="130dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:id = "@+id/popup_table_content">

    <TextView
        android:id="@+id/popup_table_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Input your table number"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

    <RelativeLayout
        android:layout_below="@id/popup_table_text"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/popup_table_num"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:background="#FFFFFF"
            android:hint="table num"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="20dp">
        </EditText>

        <Button
            android:id="@+id/enter_btn"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:text="Enter"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/popup_table_num"
            android:background="#FFFFFF"/>
    </RelativeLayout>

</RelativeLayout>
